  <releases>
    <release version="3.2.1" date="2023-08-22" urgency="medium">
      <description>
        <p>Minor updates:</p>
        <ul>
          <li>Fix potential crashes</li>
          <li>Add "Cycle Windows of application" and "Cycle Windows of application backwards" shortcuts</li>
          <li>Improve experience installing input methods</li>
          <li>Updated translations</li>
        </ul>
      </description>
      <issues>
        <issue url="https://github.com/elementary/wingpanel-indicator-keyboard/issues/108">Keyboard layout does not change properly</issue>
        <issue url="https://github.com/elementary/switchboard-plug-keyboard/issues/430">Cannot set "PrintScreen" as a shortcut for any command</issue>
      </issues>
    </release>

    <release version="3.2.0" date="2023-07-24" urgency="medium">
      <description>
        <p>Minor updates:</p>
        <ul>
          <li>Show the values associated with sliders while dragging</li>
          <li>Updated translations</li>
        </ul>
      </description>
      <issues>
        <issue url="https://github.com/elementary/switchboard-plug-keyboard/issues/191">Expose typing delays from a11y</issue>
        <issue url="https://github.com/elementary/switchboard-plug-keyboard/issues/192">Expose "fast typing" settings from a11y</issue>
        <issue url="https://github.com/elementary/switchboard-plug-keyboard/issues/193">Expose modifier key settings</issue>
        <issue url="https://github.com/elementary/switchboard-plug-keyboard/issues/389">Add specific sections link for Keyboard Shortcuts</issue>
      </issues>
    </release>

    <release version="3.1.1" date="2023-01-05" urgency="medium">
      <description>
        <p>Minor updates:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
      <issues>
        <issue url="https://github.com/elementary/switchboard-plug-keyboard/issues/426">Potential crash from missing settings schema</issue>
      </issues>
    </release>

    <release version="3.1.0" date="2022-10-20" urgency="medium">
      <description>
        <p>New features:</p>
        <ul>
          <li>Revert shortcuts to default</li>
          <li>Easily disable a shortcut</li>
          <li>Support Rime input method for Chinese</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Remove custom shortcuts from their menu</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

    <release version="3.0.0" date="2022-05-09" urgency="medium">
      <description>
        <p>Minor updates:</p>
        <ul>
          <li>Update for OS 7</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

    <release version="2.7.0" date="2022-04-06" urgency="medium">
      <description>
        <p>New features:</p>
        <ul>
          <li>Open Multitasking View with Super</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

    <release version="2.6.0" date="2021-11-23" />
  </releases>
</component>
